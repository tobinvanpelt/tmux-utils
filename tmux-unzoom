#!/bin/bash
# Unzooms a previously zoomd pane.

function get_var() {
    vars=$(tmux show-environment)
    for word in $vars; do
        if [[ "$word" == $1* ]]; then
            value=${word##*=}
        fi
    done

    echo $value
}

tmux_zoom=$(get_var TMUX_ZOOM)
tmux_stub=$(get_var TMUX_STUB)

if [ -z $tmux_zoom ]; then
    exit 0
fi

current=$(tmux-pane)
tmux swap-pane -d -s "$tmux_zoom" -t "$tmux_stub"

if [[ $current == $tmux_zoom ]] || [[ $current == $tmux_stub ]]; then
    current=$tmux_zoom
fi

tmux select-window -t "$current"
tmux select-pane -t "$current"
tmux kill-window -t zoom

tmux set-environment -u TMUX_ZOOM
tmux set-environment -u TMUX_STUB
